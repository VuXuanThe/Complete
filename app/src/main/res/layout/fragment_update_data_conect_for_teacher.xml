<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/header_background_profile">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_marginTop="@dimen/_60sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_detail_dataconect"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_back"
                            android:layout_margin="@dimen/_5sdp"
                            android:backgroundTint="@color/black"/>

                        <RelativeLayout
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgBehind"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_alignParentRight="true"
                                app:civ_border_color="@color/colorWhite"
                                app:civ_border_width="@dimen/_2sdp"/>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgFront"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_alignParentLeft="true"
                                app:civ_border_color="@color/colorWhite"
                                app:civ_border_width="@dimen/_2sdp"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorBackground"
                            android:layout_margin="@dimen/_10sdp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thông tin"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="@dimen/_125sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Gia Sư"
                                    android:textStyle="italic"
                                    android:textColor="@color/red"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/_15sdp"/>
                                <TextView
                                    android:id="@+id/tvNameTeacher"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/glass"
                                    android:gravity="center"
                                    android:textColor="@color/colorText"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:textStyle="italic"
                                    android:layout_width="@dimen/_125sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Số điện thoại"
                                    android:textColor="@color/red"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/_15sdp"/>
                                <TextView
                                    android:id="@+id/tvPhoneTeacher"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/glass"
                                    android:textColor="@color/colorText"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:textStyle="italic"
                                    android:layout_width="@dimen/_125sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Học sinh"
                                    android:textColor="@color/red"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/_15sdp"/>
                                <TextView
                                    android:id="@+id/tvNameStudent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/glass"
                                    android:textColor="@color/colorText"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:textStyle="italic"
                                    android:layout_width="@dimen/_125sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Số Điện Thoại"
                                    android:textColor="@color/red"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/_15sdp"/>
                                <TextView
                                    android:id="@+id/tvPhoneStudent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/glass"
                                    android:textColor="@color/colorText"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorBackground"
                            android:layout_margin="@dimen/_10sdp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dữ liệu cần cập nhật"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="@dimen/_5sdp">
                                <TextView
                                    android:layout_width="@dimen/_125sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Môn Học"
                                    android:textColor="@color/red"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/_15sdp"/>
                                <EditText
                                    android:id="@+id/edtSubject"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/glass"
                                    android:hint="Nhập môn học vào đây"
                                    android:textColor="@color/colorText"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="@dimen/_5sdp">
                                <TextView
                                    android:layout_width="@dimen/_125sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Học phí 1 buổi"
                                    android:textColor="@color/red"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/_15sdp"/>
                                <EditText
                                    android:id="@+id/edtTuition"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Nhập học phí vào đây"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/glass"
                                    android:inputType="number"
                                    android:textColor="@color/colorText"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="@dimen/_5sdp">
                                <TextView
                                    android:layout_width="@dimen/_125sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Số buổi đã học"
                                    android:textColor="@color/red"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/_15sdp"/>
                                <EditText
                                    android:id="@+id/edtNumSession"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Nhập số buổi đã học vào đây"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/glass"
                                    android:textColor="@color/colorText"
                                    android:textSize="14sp"
                                    android:inputType="number"/>
                            </LinearLayout>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/btnUpdate"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/button"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:text="@string/Update"
                            android:textColor="@color/red"
                            android:gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_250sdp"/>
                    </LinearLayout>
            </FrameLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

</layout>