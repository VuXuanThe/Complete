<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_cardview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_153sdp"
                android:layout_marginBottom="@dimen/_4sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_125sdp"
                    android:background="@drawable/header_background_profile">
                        <ImageView
                            android:id="@+id/imgLogo"
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:background="@drawable/logo"
                            android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_marginRight="@dimen/_50sdp"
                        app:cardCornerRadius="@dimen/_15sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        app:cardElevation="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tìm Kiếm"
                                android:layout_centerInParent="true"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:drawableRight="@drawable/ic_search"
                                android:drawableTint="@color/black"
                                android:drawablePadding="@dimen/_10sdp"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ChoseStyleSearch"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:layout_marginLeft="@dimen/_15sdp" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/slide"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20sdp"/>
            </RelativeLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardviewFindTeacherMapAndList"
                        android:layout_width="@dimen/_137sdp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_15sdp"
                        android:layout_margin="@dimen/_10sdp"
                        app:cardElevation="@dimen/_8sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_135sdp"
                            android:padding="@dimen/_10sdp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Find_Teache"
                                android:layout_gravity="center"
                                android:textSize="14sp"
                                android:textColor="@color/red"
                                android:textStyle="bold"
                                android:layout_margin="@dimen/_10sdp"/>

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/search"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorText"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/Details_Find_Teacher_1"
                                android:layout_margin="@dimen/_10sdp"
                                android:textSize="10sp"
                                android:textStyle="italic"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardviewFindStudentMapAndList"
                        android:layout_width="@dimen/_137sdp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_15sdp"
                        android:layout_margin="@dimen/_10sdp"
                        app:cardElevation="@dimen/_8sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_135sdp"
                            android:padding="@dimen/_10sdp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Find_Student"
                                android:layout_gravity="center"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/red"
                                android:layout_margin="@dimen/_10sdp"/>

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/search2"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorText"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/Details_Find_Student_1"
                                android:layout_margin="@dimen/_10sdp"
                                android:textSize="10sp"
                                android:textStyle="italic"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardviewFindTeacherNumberPhone"
                        android:layout_width="@dimen/_137sdp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_15sdp"
                        android:layout_margin="@dimen/_10sdp"
                        app:cardElevation="@dimen/_8sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_135sdp"
                            android:padding="@dimen/_10sdp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Find_Student"
                                android:layout_gravity="center"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/red"
                                android:layout_margin="@dimen/_10sdp"/>

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/search3"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorText"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/Details_Find_Teacher_2"
                                android:layout_margin="@dimen/_10sdp"
                                android:textSize="10sp"
                                android:textStyle="italic"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardviewFindStudentNumberPhone"
                        android:layout_width="@dimen/_137sdp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_15sdp"
                        android:layout_margin="@dimen/_10sdp"
                        app:cardElevation="@dimen/_8sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_135sdp"
                            android:padding="@dimen/_10sdp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Find_Student"
                                android:layout_gravity="center"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/red"
                                android:layout_margin="@dimen/_10sdp"/>

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/search4"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorText"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/Details_Find_Student_2"
                                android:layout_margin="@dimen/_10sdp"
                                android:textSize="10sp"
                                android:textStyle="italic"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NewStudent"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_15sdp" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/slide"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20sdp"/>
            </RelativeLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/newStudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_40sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:orientation="horizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NewTeacher"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_15sdp" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/slide"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20sdp"/>
            </RelativeLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/newTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_40sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_60sdp"/>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>

        </LinearLayout>





    </androidx.core.widget.NestedScrollView>


</layout>